{
  "properties": {
    "displayName": "Tagging: Apply Application tag and its default value",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "tagging-Application-append",
    "policyType": "Custom",
    "description": "Applies the required Application tag from the NS tagging schema with a default value if tag is not specified by the user.",
    "metadata": {
      "category": "New Signature DriveTrain"
    },
    "Mode": "Indexed",
    "parameters": {
      "tagName": {
        "type": "String",
        "defaultValue": "Application",
        "metadata": {
          "description": "Name of the tag"
        }
      },
      "defaultTagValue": {
        "type": "String",
        "defaultValue": "notset",
        "metadata": {
          "description": "Default value of the tag"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "[concat('tags[', parameters('tagName'), ']')]",
        "exists": "false"
      },
      "then": {
        "effect": "append",
        "details": [
          {
            "field": "[concat('tags[', parameters('tagName'), ']')]",
            "value": "[parameters('defaultTagValue')]"
          }
        ]
      }
    }
  }
}